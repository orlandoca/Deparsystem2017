<div class="panel panel-primary text-uppercase">
    <div class="panel-body">
        <%= form_for(@pago) do |f| %>
        <% if @pago.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@pago.errors.count, "error") %> prohibited this pago from being saved:</h2>
            <ul>
                <% @pago.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
        <% end %>
         <div class="field">
            <%= f.label :contrato_id %><br>   
            <%= f.collection_select(:contrato_id, Contrato.all, :id, :id, { prompt: true },{}) %>               
        </div>

        <div class="field">
            <%= f.label :inquilino_id %><br>   
            <%= f.collection_select(:inquilino_id, Inquilino.all, :id, :nombre, { prompt: true },{})  %>   
        </div>

         <div class="field">
              <%= f.label :fecha_pago %><br>
              <%= f.date_select :fecha_pago ,class: "form-control text-uppercase"%>
        </div>
        <div class="field">
            <%= f.label :monto %><br>
            <%= f.number_field :monto ,class: "form-control text-uppercase" %>
        </div>
        <div class="field">
            <%= f.label :estado %><br>
           <%= f.select :estado,[[:Debe, "Debe"], [:Pagado, "Pagado"]] ,class: "form-control text-uppercase" %>
        </div>
        <div class="actions">
            <%= f.submit %>
        </div>
        <% end %>
    </div>
</div>